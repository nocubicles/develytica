<!DOCTYPE html>
<html>
{{ template "head.gohtml" . }}

<body>
    {{ template "header.gohtml" . }}
    <div class="container">
        <div class="columns">
            <div class="column is-3 ">
                {{ template "side.gohtml" }}
            </div>
            <div class="column is-9">
                <div class="card">
                    <div class="card-content">
                        <div class="media">
                            <div class="media-left">
                                <figure class="image is-48x48">
                                    <img style="border-radius: 50%;" src="{{.TeamMemberData.AvatarURL}}" alt="Placeholder image">
                                </figure>
                            </div>

                            <div class="media-content">
                                <p class="title is-4">Profile name: {{.TeamMemberData.Login}}</p>
                                <p class="subtitle is-6"><a href="https://github.com/{{.TeamMemberData.Login}}">Profile</a></p>
                            </div>
                        </div>

                        <div class="table-container">
                            <table class="table is-striped is-fullwidth">
                                <thead>
                                    <tr>
                                        <th>Skill</th>
                                        <th>Issues closed with this skill</th>
                                        <th>Last time used day(s) ago</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{range .UserSkills}}
                                    <tr>
                                        <td>{{.SkillName}}</td>
                                        <td>{{.DoneCount}}</td>
                                        <td>{{.LastUsedDaysAgo}}</td>
                                    </tr>
                                    {{end}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>